<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-8">
    <h1 class="pull-left">Listing Ideas</h1>
  </div>
  <div class="col-sm-4">
    <%= link_to 'New Idea', new_idea_path, :class => 'btn btn-primary pull-right' %>
  </div>
</div>
<hr/>
<div class="row">
  <% @ideas.each do |idea| %>
      <div class="col-sm-3">
        <div class="box">
          <div class="image-wrapper">
            <%= image_tag(idea.picture_url, :width => 300) if idea.picture.present? %>
          </div>

          <h3><%= idea.name %></h3>
          <p><%= idea.description %></p>

          <div class="btn-group" role="group" aria-label="...">
            <%= link_to 'Show', idea, :class => "btn btn-default btn-sm" %>
            <%= link_to 'Edit', edit_idea_path(idea), :class => "btn btn-default btn-sm" %>
            <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-default btn-sm" %>
          </div>


        </div>
      </div>
  <% end %>
</div>


<br>

