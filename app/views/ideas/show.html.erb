<p id="notice"><%= notice %></p>

<div class=" col-sm-offset-3 col-sm-6">
    <div class="box">

          <div class="image-wrapper">
            <%= image_tag(@idea.picture_url, :width => 300) if @idea.picture.present? %>
          </div>
      <h3><%= @idea.name %></h3>
      <br>
         <p> <%= @idea.description %></p>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to 'Edit', edit_idea_path(@idea), :class => "btn btn-default" %>
            <%= link_to 'Back', ideas_path, :class => "btn btn-default" %>
          </div>
      <hr/>
      <h4>Comments</h4>
      <% @comments.each do |comment| %>

          <div class="media">
            <div class="media-left">
              <a href="#">
                <img class="media-object" src="https://placeholdit.imgix.net/~text?txtsize=8&txt=64%C3%9764&w=64&h=64" alt="...">
              </a>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= comment.user_name %></h4>
              <p><%= comment.body %> <%= link_to comment_path(comment), method: :delete, data: {confirm: 'Are you sure?'} do  %><i class="glyphicon glyphicon-trash"></i><% end %></p>
            </div>
          </div>
          <% end %>
      <hr/>
      <%= render 'comments/form' %>
    </div>
</div>